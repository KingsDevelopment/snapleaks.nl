    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string",
      "required": true
    },
    "ownerId": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "string",
      "required": true
    },
    "tags": {
      "type": [
        "string"
      ]
    }
  },
  "validations": [],
  "relations": {
    "votes": {
      "type": "hasMany",
      "model": "Vote",
      "foreignKey": "postId"
    },
    "owner": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "ownerId"
    }
  },
